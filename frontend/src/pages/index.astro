---
import Icons from "@components/common/Icons.astro";
---

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="robots" content="index, follow" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />

    <!-- Primary Meta Tags -->
    <title>Jakub Śpiewak</title>
    <meta name="title" content="Jakub Śpiewak" />
    <meta name="description" content="Jakub Śpiewak landing page." />
    <link rel="canonical" href="https://jakubspiewak.com" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://jakubspiewak.com" />
    <meta property="og:title" content="Jakub Śpiewak" />
    <meta property="og:description" content="Jakub Śpiewak landing page" />
    <meta
        property="og:image"
        content="https://alpha.jakubspiewak.com/assets/banner.jpg"
    />
    <meta property="og:site_name" content="Jakub Śpiewak Blog" />
    <meta property="og:author" content="Jakub Śpiewak" />

    <style is:global>
        @font-face {
            font-family: Magiel;
            src: url("/font/Magiel-Black.woff");
        }
        * {
            margin: 0;
            padding: 0;
            --ether-color-secondary2: #f79b19;
            --ether-color-secondary1: #028fa3;
        }
        canvas {
            display: block;
        }
        #container {
            width: 100vw;
            height: 100vh;
        }
        body {
            background-color: #121821;
        }

        .content {
            max-width: 80vw;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translateX(-50%) translateY(-50%);
            color: var(--ether-color-secondary2);
            /* border: 0.5em var(--ether-color-secondary2) solid; */
            /* border-radius: 2em; */
            padding: 1em 2em;
            backdrop-filter: blur(10px);
        }
        .title {
            font-family: Magiel, sans-serif;
            font-size: 4em;
            transform: scale(0);
            opacity: 0;
            text-align: center;
            white-space: nowrap;
            word-wrap: none;
            word-break: keep-all;
            padding-bottom: 0.5em;
        }

        .navigation {
            display: flex;
            gap: 1em;
            justify-content: space-between;
            align-items: center;
            transform: translateY(-200%);
            transform: scale(0);
            opacity: 0;
        }
        a {
            text-decoration: none;
            color: var(--ether-color-secondary2);
        }
        a:hover {
            color: var(--ether-color-secondary1);
        }
        .blog-link {
            font-family: Magiel, sans-serif;
            font-size: 1.5em;
        }
        @media only screen and (max-width: 600px) {
            .title {
                font-size: 2em;
            }
        }
    </style>
    <script>
        import gsap from "gsap";
        gsap.to(document.querySelector(".title"), {
            duration: 2,
            opacity: 1,
            scale: 1,
        });
        gsap.to(document.querySelector(".navigation"), {
            delay: 2,
            duration: 2,
            translateY: 0,
            opacity: 1,
            scale: 1,
        });
    </script>
    <script>
        import Three from "../home/three.js";
        import Stars from "../home/models/stars.js";

        const three = new Three({
            dom: document.getElementById("container"),
        });

        const stars = new Stars({
            scene: three.scene,
            camera: three.camera,
        });
        three.onRenderActions.push(() => stars.onRender());
        three.render();
    </script>
</head>
<body>
    <main class="content">
        <div class="title">Jakub Śpiewak</div>
        <nav class="navigation">
            <Icons />
            <a class="blog-link" href="/blog">Blog</a>
        </nav>
    </main>
    <div>
    <div id="container"></div>
    </div>
</body>
