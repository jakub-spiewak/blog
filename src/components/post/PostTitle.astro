---
import type { PostHeaderProps } from "src/util/props.types";

const { frontmatter: { date, title } } = Astro.props as PostHeaderProps
---

<div class="max-w-7xl w-full my-3 mx-auto px-2 pt-4 pb-8 border-b border-opacity-30">
    <h3 class="w-fit mx-auto">
        <time class="text-ether-text3">
            {new Date(date).toLocaleString('en', {day: 'numeric', month: 'long', year:
            'numeric',
            weekday: 'long'})}
        </time>
    </h3>
    <h1 class="w-fit mx-auto font-extrabold text-5xl text-center">
        {title}
    </h1>
</div>