---
import type { MarkdownHeading } from "astro";

const { depth, text, slug } = Astro.props as MarkdownHeading
---

<li id={`nav-heading-${slug}`} class="font-sm text-gray-500 border-l-2 leading-snug border-gray-300">
    <a style={`padding-left: ${(depth - 1) * 0.66}rem;`} href={`#${slug}`} class="truncate w-[99%] inline-block">
        {text}
    </a>
</li>