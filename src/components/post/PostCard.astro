---
import { PostCardProps } from "src/util/props.types";
import PostTag from "./PostTag.astro";

const { frontmatter: { date, summary, tags, title }, readTime, slug } = Astro.props as PostCardProps
---

<section class="max-w-2xl p-4 border rounded-2xl flex flex-col gap-2 group">
    <h2 class="text-xl font-semibold"><a class="group-hover:text-ether-secondary2" href={`/blog/${slug}`}>{title}</a></h2>
    <time class="text-ether-text2">
        {new Date(date).toLocaleString('en', {day: 'numeric', month: 'long', year:
        'numeric',
        weekday: 'long'})}
    </time>
    <p class="text-ether-text2">{summary}</p>
    <ul class="flex flex-wrap gap-4">
        {
        tags.map((value) => (
        <PostTag text={value} />))
        }
    </ul>
    <div class="text-ether-text3">Reading time about {readTime.toFixed()} minutes. </div>
</section>