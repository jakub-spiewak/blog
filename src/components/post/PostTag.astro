---
import { PostTagProps } from "src/util/props.types";

const { text, amount } = Astro.props as PostTagProps
---

<a href={`/tag/${text.replace("/", "" )}`}
    class="uppercase shadow-2xl dark:text-ether-surface1 py-1 px-4 rounded-full bg-ether-secondary1 hover:bg-ether-secondary2 text-ether-inverted">
    {!!amount ? `${text} (${amount})` : text }
</a>