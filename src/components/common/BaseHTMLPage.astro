---
import BaseHead from "@components/common/BaseHead.astro";
import Footer from "@components/common/Footer.astro";
import Header from "@components/common/Header.astro";
import { BaseHTMLPageProps } from "src/util/props.types";

import "src/styles/base.css"
import ThemeScript from "./ThemeScript.astro";

const {description, title} = Astro.props as BaseHTMLPageProps
---


<html class="scroll-pt-24 scroll-smooth">

<head>
    <BaseHead title={title} description={description} />
</head>

<body class="max-w-screen min-h-screen flex flex-col bg-ether-surface1 text-ether-text1">
    <ThemeScript/>
    <Header />
    <slot/>
    <Footer />
</body>

</html>