---
import { markdownFiles } from "src/util/file.util.astro";
import BaseHead from "../components/BaseHead.astro";

let title = "Example Blog";
let description = "The perfect starter for your perfect blog.";

const posts = markdownFiles
---

<html lang="en">

<head>
	<BaseHead title={title} description={description} />
</head>

<body>
	<div class="wrapper">
		<main class="content">
			<section class="intro">
				<h1>{title}</h1>
				<p>{description}</p>
			</section>
			<section aria-label="Blog post list">
				{posts.map((post) => (
				<div><a href={`/blog/${post.slug}`}>{post.frontmatter.title}</a></div>
				))}
			</section>
		</main>
	</div>
</body>

</html>

<style>
	.content {
		margin-top: 4rem;
		margin-bottom: 8rem;
	}

	.intro {
		padding-bottom: 4rem;
		margin-bottom: 2rem;
		border-bottom: 4px solid var(--theme-divider);
	}

	h1 {
		font-size: 2.5rem;
		font-weight: 700;
	}
</style>